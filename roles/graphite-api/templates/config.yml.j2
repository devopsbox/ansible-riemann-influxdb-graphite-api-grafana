# This file was generated by Ansible for {{ansible_fqdn}}
# Do NOT modify this file by hand!

search_index: {{graphite_api_search_index}}
finders:
{% if graphite_api_whisper %}
  - graphite_api.finders.whisper.WhisperFinder
{% endif %}
{% if graphite_api_influxdb %}
  - graphite_influxdb.InfluxdbFinder
{% endif %}
functions:
  - graphite_api.functions.SeriesFunctions
  - graphite_api.functions.PieFunctions
{% if graphite_api_whisper %}
whisper:
  directories:
{% for dir in graphite_api_whisper_directories %}
  - {{dir}}
{% endfor %}
{% endif %}
{% if graphite_api_influxdb %}
influxdb:
   host: {{influxdb_host}}
   port: {{influxdb_port}}
   user: {{influxdb_user}}
   pass: {{influxdb_pass}}
   db:   {{influxdb_db}}
   schema:
     - ['', 30]
     - ['high-res-metrics', 10]
cache:
   CACHE_TYPE: 'filesystem'
   CACHE_DIR: '/tmp/graphite-api-cache'
{% endif %}
time_zone: {{graphite_api_timezone}}
